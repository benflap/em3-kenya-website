{
    "kind": "collectionType",
    "collectionName": "blog_posts",
    "info": {
        "name": "Blog Post",
        "description": ""
    },
    "options": {
        "increments": true,
        "timestamps": true,
        "draftAndPublish": true
    },
    "attributes": {
        "title": {
            "type": "string"
        },
        "text": {
            "type": "richtext"
        },
        "title_image": {
            "model": "file",
            "via": "related",
            "allowedTypes": ["images", "files", "videos"],
            "plugin": "upload",
            "required": false
        },
        "slug": {
            "type": "string"
        }
    }
}
